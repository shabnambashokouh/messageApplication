<%- include("./layouts/main-top.js") %>

<h3>Last Articles</h3>

<div class="article-list">
  <% for (const article of articles) { %>
  <div class="article">
    <div
      class="image"
      style="background-image: url('<%= article.image %>')"
    ></div>
    <div class="detail">
      <a href="/article/<%= article.id %>"> <h3><%= article.title %></h3></a>
      <p><%= article.text %></p>
    </div>
  </div>
  <% } %>
</div>

<div class="all-article-link">
  <a href="/article"> View All Articles </a>
</div>

<%- include("./layouts/main-bottom.js") %>
